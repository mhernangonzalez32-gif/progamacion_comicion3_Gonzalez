magnitud = float(input("Ingrese la magnitud del terremoto: "))

if magnitud < 3:
    resultado = "Muy leve (Imperceptible)"
elif magnitud < 4:
    resultado = "Leve (ligeramente perceptible)"    
elif magnitud < 5: 
    resultado = "Moderado (Sentido por personas, pero generalmente no causa da単os)"
elif magnitud < 6: 
    resultado = "Fuerte (puede causar da単os en estructuras debiles)"
elif magnitud < 7: 
    resultado = "Muy fuerte (puede causar da単os significativos)"
else: 
    resultado = "Extremo (puede causar graves da単os a gran escala)"

print(resultado)